{
  "files": ["src/assets/custom.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node", "vite-svg-loader"],
    "incremental": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "verbatimModuleSyntax": false,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "types.d.ts",
    "shims-vue.d.ts",
    "env.d.ts",
    "./docs/**/*.mts",
    "./docs/**/*.ts"
  ],
  "exclude": ["node_modules", "**/node_modules", "src/components/preview", "src/index.ts", "components.d.ts", "dist"]
}
